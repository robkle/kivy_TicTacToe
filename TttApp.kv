#:import math math

<CustButton@Button>:
	border: (10, 10, 10, 10)
	text: ''
	font_size: '70sp'
<TttLayout>
	orientation: 'vertical'
	canvas:
		Color:
			rgba: (1,1,1,1)
		Rectangle:
			size: self.size
			#source: '' Insert image file 
	#Label:
	#	markup: True
	#	id: title
	#	size_hint_y: 0.3
	#	text: '[color=008080]TicTacToe[/color]'
	#	font_size: '70sp'
	GridLayout:
		cols: 3
		CustButton:
			id: bt0
			on_press: if root.tictactoe[0] == math.inf and root.win() == False : root.symbolCell(); self.text = root.symbol; root.tictactoe[0] = root.tic; root.selectCell(); root.win_display();
