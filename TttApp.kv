<CustButton@Button>:
	border: (10, 10, 10, 10)
	text: ''
	font_size: '70sp'
<TttLayout>
	orientation: 'vertical'
	canvas:
		Color:
			rgba: (1,1,1,1)
		Rectangle:
			size: self.size
	GridLayout:
		cols: 3
		CustButton:
			id: bt0
			on_press: root.click(0)
		CustButton:
			id: bt1
			on_press: root.click(1)
		CustButton:
			id: bt2
			on_press: root.click(2)
		CustButton:
			id: bt3
			on_press: root.click(3)
		CustButton:
			id: bt4
			on_press: root.click(4)
		CustButton:
			id: bt5
			on_press: root.click(5)
		CustButton:
			id: bt6
			on_press: root.click(6)
		CustButton:
			id: bt7
			on_press: root.click(7)
		CustButton:
			id: bt8
			on_press: root.click(8)
	GridLayout:
		cols: 3
		size_hint_y: 0.2
		Label:
			markup: True
			id: so
			text: f'[color=008080]O: {root.score_O}[/color]'
			font_size: '30sp'
		Button:
			id: win
			text: 'O starts'
			font_size: '30sp'
			on_press: if root.win() : root.refresh()
		Label:
			markup: True
			id: sx
			text: f'[color=008080]X: {root.score_X}[/color]'
			font_size: '30sp'
